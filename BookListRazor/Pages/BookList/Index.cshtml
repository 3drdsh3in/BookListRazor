@page
@model BookListRazor.BookList.IndexModel
@{
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" type="button" class="btn btn-info form-control">Create New Book</a>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <!--! Tag Helper -->
                        <th>
                            <label asp-for="Books.FirstOrDefault().Name"></label>
                        </th>
                        <!-- HTML Helper (Same thing As the Above, but for HTML Helper) -->
                        <th>
                            @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)
                            @* CTRL + K +k C TO COMMENT OUT LIKE THIS *@
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)
                        </th>
                        <th>
                        </th>
                    </tr>
                    @foreach (var item in Model.Books)
                    {
                <tr>
                    <td>
                        <!--  -->
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        <!--  -->
                        @Html.DisplayFor(m => item.Author)
                    </td>
                    <td>
                        <!--  -->
                        @Html.DisplayFor(m => item.ISBN)
                    </td>
                    <td>
                        <button class="btn btn-danger btn-sm">
                            Delete
                        </button>
                        <a class="btn btn-success btn-sm text-white">
                            Edit
                        </a>
                    </td>
                </tr>
                    }
                </table>
            }
            else
            {
                <p>No Books Available</p>
            }
        </form>
    </div>
</div>